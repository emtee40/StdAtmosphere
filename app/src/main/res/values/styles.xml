<resources>
    <style name="HelpTheme.Light" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="Text.Light" parent="@android:style/TextAppearance.DeviceDefault.Inverse">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="Text.Dark" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="HelpTheme.Dark" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="AppTheme.Light" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:dialogTheme">@style/HelpTheme.Light</item>
        <item name="android:alertDialogTheme">@style/HelpTheme.Light</item>
        <item name="android:alertDialogStyle">@style/Text.Light</item>
    </style>
    <style name="AppTheme.Dark" parent="@android:style/Theme.DeviceDefault">
        <item name="android:dialogTheme">@style/HelpTheme.Dark</item>
        <item name="android:alertDialogTheme">@style/HelpTheme.Dark</item>
        <item name="android:alertDialogStyle">@style/Text.Dark</item>
    </style>
</resources>